<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_rounded_button_yellow"
    android:layout_marginTop="@dimen/_6ssp"
    android:layout_marginRight="@dimen/_4ssp"
    android:layout_marginLeft="@dimen/_4ssp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_8ssp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50ssp"
        android:layout_weight=".5">

        <ImageView
            android:id="@+id/imgVchannelLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtVChannelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_8ssp"
        android:layout_marginRight="@dimen/_8ssp"
        android:layout_weight="1"
        android:text="Beine Sport 4"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_18ssp" />
</LinearLayout>


</LinearLayout>