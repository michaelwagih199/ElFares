<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_rounded_button_yellow"
    android:layout_marginTop="@dimen/_6ssp"
    android:padding="@dimen/_8ssp"
    android:layout_marginRight="@dimen/_4ssp"
    android:layout_marginLeft="@dimen/_4ssp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50ssp"
        app:cardCornerRadius="@dimen/_8ssp"
        android:layout_margin="@dimen/_6ssp"
        app:cardElevation="0dp"
        android:layout_weight=".5" >

        <ImageView
            android:id="@+id/imgVchannelLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/logo"
            tools:ignore="VectorDrawableCompat"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtVChannelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beine Sport 4"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_18ssp"
        android:layout_marginLeft="@dimen/_8ssp"
        android:layout_marginRight="@dimen/_8ssp"
        />
</LinearLayout>


</LinearLayout>